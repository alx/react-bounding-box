{
  "name": "react-bounding-box",
  "version": "0.5.21",
  "description": "React Bounding Box Component",
  "repository": {
    "type": "git",
    "url": "https://github.com/alx/react-bounding-box.git"
  },
  "bugs": {
    "url": "https://github.com/alx/react-bounding-box/issues"
  },
  "license": "MIT",
  "scripts": {
    "build": "webpack --mode=production",
    "prepare": "husky",
    "lint": "eslint src",
    "lintfix": "eslint src --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepack": "npm run build",
    "security:audit": "npm audit --audit-level moderate",
    "security:check": "npx audit-ci --moderate",
    "release": "npm version patch && git push --follow-tags",
    "release:minor": "npm version minor && git push --follow-tags",
    "release:major": "npm version major && git push --follow-tags",
    "storybook": "start-storybook -p 6006 -s ./stories",
    "publish-storybook": "bash .scripts/publish_storybook.sh",
    "build-storybook": "build-storybook"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/plugin-transform-class-properties": "^7.27.1",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@eslint/js": "^9.31.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.3.1",
    "audit-ci": "^7.1.0",
    "babel-loader": "^9.2.1",
    "eslint": "^8.57.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-canvas-mock": "^2.5.2",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "webpack": "^5.100.1",
    "webpack-cli": "^5.1.4"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "dependencies": {
    "prop-types": "^15.6.1",
    "seedrandom": "^2.4.3"
  },
  "main": "dist/react-bounding-box.js",
  "exports": {
    ".": "./dist/react-bounding-box.js"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
